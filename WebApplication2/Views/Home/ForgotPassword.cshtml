
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_nopuot.cshtml";
}

<h2>Quên mật khẩu</h2>

@using (Html.BeginForm())
{
    
    
    <div class="form-horizontal" style="align-content:center">
            <hr />
            <div class="text-success">
                @ViewBag.Message
            </div>
            <div class="form-group">
                Vui lòng nhập email đã đăng ký cho tài khoản để lấy lại mật khẩu
            </div>
            <div class="form-group">
                <label class="control-label col-md-2"> Nhập Email :</label>
                @Html.TextBox("Email", "", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>
            </div>
        
    </div>
    
}
