
@model WebApplication2.Context.Account

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_nopuot.cshtml";

}
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>L.I.H</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/dangnhap.css">
    <script src="~/Content/js/dangnhap.js"></script>
</head>

<body>

    <div class="loginbox">
        <img src="~/Content/hinhanh/170939215_841082360095053_9052116840066442180_n.jpg" class="avatar">
        <h1>Login</h1>
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "UserName" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PassWord)
                @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <div class="form-group">
                <p class="text-danger">
                    @TempData["error"]
                </p>
            </div>
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-primary" value="Login" />
            </div>
            <a href="~/Home/ForgotPassword">Quên mật khẩu ?</a><br>
            <a href="~/Home/Register">ĐĂNG KÝ</a>
        </form>

    </div>
    
</body>
</html>
}


